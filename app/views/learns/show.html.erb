<% @page_title = "#{@page.title} -  #{application_name}" %>
<div id="static_holder" class="container-fluid">
  <div class="row">
    <div class="col-xs-4 col-sm-4 static_side_nav_container">
      <%= render partial: '/shared/static_extra_nav' %>

    </div>
    <div class="col-xs-12 col-sm-7 col-lg-8 col-md-8 static_holder_content_container">
      <div id="static_holder_content" class="static_holder_content">
        <h2><%=@page.title%><% if current_user.present? and (current_user.superuser? or (current_user.admin? and !@page.published))%><span style="color:red;"> <%= link_to "[Edit]", edit_learn_path(@page) %></span><%end%></h2>

        <%=@page.content.html_safe%>

      </div>

    </div>

  </div>
</div>
