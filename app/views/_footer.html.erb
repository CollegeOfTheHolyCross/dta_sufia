<div id="footer" class="container-fluid">
  <div class="row">
    <div id="footer_logo" class="col-sm-3 hidden-xs">
      <div style="float:left;">
        <%= link_to application_name, root_path, :id => 'footer_logo_link' %>
      </div>
      <div id="footer_news" style="float:left; margin-left:20px;">
        <strong>Recent News</strong>
          <ul style="padding-left:17px;">

            <% if @recent_posts %>
                <%   @recent_posts.each do |post| %>
                    <li>
                      <%= link_to post.title, posts_path(post).gsub('.', '/') %>
                    </li>
                <% end %>
            <% end %>
      </ul>
      </div>



    </div>
    <div id="footer_address" class="col-sm-9">
      <strong>Copyright &copy; <%= t('blacklight.application_name') %></strong><br />
      <%= t('blacklight.footer.address') %><br />
      <%= link_to 'Contact Us', about_contact_path %>
    </div>
  </div><!-- /footer -->
  </div><!-- /.row -->
</div><!-- /footer -->

