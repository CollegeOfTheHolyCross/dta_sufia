<div id="static_holder" class="container-fluid">
  <div class="row">
    <div class="col-xs-4 col-sm-4">
      <%= render partial: '/shared/static_extra_nav' %>

    </div>
    <div class="col-xs-8 col-sm-8">
      <div id="static_holder_content">
        <h2>Add News</h2>

        <%= simple_form_for(@post, :url => posts_path, :as => :posts, multipart: true, remote: true, authenticity_token: true) do |f| %>


          <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'}}, :required=>true  %>

            <%= f.input :identifier, :required=>true  %>

            <%= f.input :title, :required=>true  %>

            <%= f.input :pname, :label=>'Publish as:', :required=>true  %>

            <%= f.input :published, as: :boolean, :label=>'Visible?'  %>

            <%= f.button :submit %>

        <% end %>
      </div>

    </div>

  </div>
</div>
