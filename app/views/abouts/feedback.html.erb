<% @page_title = "Contact -  #{application_name}" %>
<div id="static_holder" class="container-fluid">
  <div class="row">
    <div class="col-xs-4 col-sm-4 static_side_nav_container">
      <%= render partial: '/shared/static_extra_nav' %>

    </div>
    <div class="col-xs-8 col-sm-8 static_holder_content_container">
      <div id="static_holder_content" class="static_holder_content">
        <h2>Feedback Form</h2>

<% unless @errors.empty? %>
    <div id="error_explanation" class="alert alert-error">
      <ul class="errors">
        <% @errors.each do |msg| %>
            <li style="font-color:red;"><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_tag(feedback_path, :id => 'feedback_form', :class => 'form-horizontal') do %>
    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t('blacklight.feedback.form.name') %></label>
      <div class="col-sm-6">
        <%= text_field_tag :name, params[:name], :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t('blacklight.feedback.form.email') %></label>
      <div class="col-sm-7">
        <%= text_field_tag :email, params[:email], :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t('blacklight.feedback.form.topic.label') %></label>
      <div class="col-sm-4">
        <%= select_tag(:topic,
                       options_for_select(t('blacklight.feedback.form.topic.options').values),
                       :class => 'form-control') %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label"><%= t('blacklight.feedback.form.message') %></label>
      <div class="col-sm-7">
        <%= text_area_tag :message, params[:message], :size => '24x6', :class =>  'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <%= submit_tag(t('blacklight.feedback.submit'), :class => 'btn btn-default') %>
      </div>
    </div>

<% end %>

      </div>

    </div>

  </div>
</div>
