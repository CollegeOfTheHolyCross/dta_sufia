<div id="item_metadata" class="well" style="max-width:1000px;">
<h2 style="margin-top:-15px;">Item Information</h2>
  <dl class="defList dl-horizontal">
    <% if @document[:alternative_tesim] %>
        <dt>Other Titles:</dt>
        <dd>
          <% @document[:alternative_tesim].each do |alternative_titles| %>
              <%= alternative_titles %><br />
          <% end %>
        </dd>
    <% end %>

    <% if @document[:date_created_tesim] %>
        <dt>Date Created:</dt>
        <dd>
          <% @document[:date_created_tesim].each do |val| %>
              <%= val %><br />
          <% end %>
        </dd>
    <% end %>


    <% if @document[:date_issued_tesim] %>
        <dt>Date Issued:</dt>
        <dd>
          <% @document[:date_issued_tesim].each do |val| %>
              <%= val %><br />
          <% end %>
        </dd>
    <% end %>


    <% if @document[:creator_tesim] %>
        <dt>Creator(s):</dt>
        <dd>
          <% @document[:creator_tesim].each do |val| %>
              <%= val %><br />
          <% end %>
        </dd>
    <% end %>

    <% if @document[:dta_all_subject_ssim] %>
        <dt>Topic(s):</dt>
        <dd>
          <% @document[:dta_all_subject_ssim].each do |val| %>
              <%= link_to_facet(val, 'dta_all_subject_ssim') %><br />
          <% end %>
        </dd>
    <% end %>

    <% if @document[:genre_ssim] %>
        <dt>Genre:</dt>
        <dd>
          <% @document[:genre_ssim].each do |val| %>
              <%= link_to_facet(val, 'genre_ssim') %><br />
          <% end %>
        </dd>
    <% end %>

    <% if @document[:dta_other_subject_ssim] %>
        <dt>People / Organizations:</dt>
        <dd>
          <% @document[:dta_other_subject_ssim].each do |val| %>
              <%= link_to_facet(val, 'dta_other_subject_ssim') %><br />
          <% end %>
        </dd>
    <% end %>

    <% if @document[:subject_geographic_ssim] %>
        <dt>Places:</dt>
        <dd>
          <% @document[:subject_geographic_ssim].each do |val| %>
              <%= link_to_facet(val, 'subject_geographic_ssim') %><br />
          <% end %>
        </dd>
    <% end %>


</dl>
</div>
