<div id="item_metadata" class="well" style="max-width:1000px;">
<h2 style="margin-top:-15px;">Item Information</h2>
  <dl class="dl-horizontal file-show-term">
    <div class="col-xs-12 col-sm-6 col-md-6" style="float:left; margin:0px; padding: 0px;">
      <% if @document[:collection_name_ssim] %>
          <dt>Collection</dt>
          <dd>
            <% @document[:collection_name_ssim].each do |val| %>
                <%= link_to_facet(val, 'collection_name_ssim') %><br />
            <% end %>
          </dd>
      <% end %>
      <% if @document[:institution_name_ssim] %>
          <dt>Institution</dt>
          <dd>
            <% @document[:institution_name_ssim].each do |val| %>
                <%= link_to_facet(val, 'institution_name_ssim') %><br />
            <% end %>
          </dd>
      <% end %>


      <% if @document[:creator_tesim] %>
          <dt>Creator(s)</dt>
          <dd>
            <% @document[:creator_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:contributor_tesim] %>
          <dt>Contributor(s)</dt>
          <dd>
            <% @document[:contributor_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:publisher_tesim] %>
          <dt>Publisher</dt>
          <dd>
            <% @document[:publisher_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:date_created_tesim] %>
          <dt>Date Created</dt>
          <dd>
            <% @document[:date_created_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>
      <% if @document[:date_issued_tesim] %>
          <dt>Date Issued</dt>
          <dd>
            <% @document[:date_issued_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:date_temporal_tesim] %>
          <dt>Date Temporal</dt>
          <dd>
            <% @document[:date_temporal_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:genre_ssim] %>
          <dt>Genre</dt>
          <dd>
            <% @document[:genre_ssim].each do |val| %>
                <%= link_to_facet(val, 'genre_ssim') %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:dta_other_subject_ssim] %>
          <dt>People / Organizations</dt>
          <dd>
            <% @document[:dta_other_subject_ssim].each do |val| %>
                <%= link_to_facet(val, 'dta_other_subject_ssim') %><br />
            <% end %>
          </dd>
      <% end %>



      <% if @document[:subject_geographic_hier_ssim] %>
          <dt>Places</dt>
          <dd>
            <% @document[:subject_geographic_hier_ssim].each do |val| %>
                <% val.split('||').each_with_index do |term, index| %>
                    <%= link_to_facet(term, 'subject_geographic_ssim') %>
                    <%= " &gt;".html_safe unless index == val.split('||').length-1 %>
                <%end%>
                <br />
            <% end %>

          </dd>
      <% end %>





    </div>
    <div class="col-xs-12 col-sm-6 col-md-6" style="float:left;">


      <% if @document[:dta_all_subject_ssim] %>
          <dt>Topic(s)</dt>
          <dd>
            <% @document[:dta_all_subject_ssim].each do |val| %>
                <%= link_to_facet(val, 'dta_all_subject_ssim') %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:resource_type_tesim] %>
          <dt>Resource Type</dt>
          <dd>
            <% @document[:resource_type_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>



      <% if @document[:analog_format_tesim] %>
          <dt>Analog Format</dt>
          <dd>
            <% @document[:analog_format_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:digital_format_tesim] %>
          <dt>Digital Format</dt>
          <dd>
            <% @document[:digital_format_tesim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:language_label_ssim] %>
          <dt>Language</dt>
          <dd>
            <% @document[:language_label_ssim].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:related_url] %>
          <dt>Related URL</dt>
          <dd>
            <% @document[:related_url].each do |val| %>
                <%= link_to val %><br />
            <% end %>
          </dd>
      <% end %>

      <% if @document[:rights] %>
          <dt>Rights</dt>
          <dd>
            <% @document[:rights].each do |val| %>
                <%= val %><br />
            <% end %>
          </dd>
      <% end %>



    </div>




<div style="clear:both;"></div>









</dl>

  <%= render 'show_actions_public' %>

</div>
